{
  "name": "@localazy/release",
  "version": "2.20.0",
  "description": "Localazy GitHub release action",
  "author": "Localazy <team@localazy.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "npm run build:cypress-process-clean-up && npm run build:generate-badges && npm run build:release-workflow",
    "build:cypress-process-clean-up": "npm run compile -- --out cypress-process-clean-up/dist/main src/cypress-process-clean-up/main.ts && npm run compile -- --out cypress-process-clean-up/dist/post src/cypress-process-clean-up/post.ts",
    "build:generate-badges": "npm run compile -- --out generate-badges/dist/main src/generate-badges/main.ts",
    "build:release-workflow": "npm run compile -- --out release-ci/dist src/release-ci/main.ts",
    "test": "npm run test:unit",
    "test:unit": "vitest",
    "test:unit:ci": "vitest run --ci",
    "test:unit:browser": "vitest --browser",
    "test:unit:debug": "vitest --inspect --no-file-parallelism --browser",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:ui": "vitest --ui",
    "compile": "ncc build --minify --no-cache --target es2022 --v8-cache"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^21.1.1",
    "badgen": "^3.2.3",
    "filesize": "^10.1.0",
    "fs-extra": "^11.2.0",
    "ps-list": "^8.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.28",
    "@vercel/ncc": "^0.38.0",
    "@vitest/browser": "^3.0.6",
    "@vitest/coverage-v8": "^3.0.6",
    "@vitest/ui": "^3.0.6",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "typescript": "^5.2.2",
    "vitest": "^3.0.6"
  }
}
